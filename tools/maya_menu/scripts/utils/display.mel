global proc int display(string $mode){$panel = `getPanel -withFocus`;if ($panel == "")	return 0;if (`getPanel -typeOf $panel` != "modelPanel")	return 0;if ($mode == "wire")       modelEditor -edit -da "wireframe" -dl "default" $panel;if ($mode == "shadeOnly") //notText	modelEditor -edit -da "smoothShaded" $panel;if ($mode == "shade")	modelEditor -edit -da "smoothShaded" -dtx 0 $panel;if ($mode == "texture")	modelEditor -edit -da "smoothShaded" -dtx on $panel;if ($mode == "light")	modelEditor -edit -dl "all" $panel;if ($mode == "shadeWire")	modelEditor -edit -wos 1 $panel;if ($mode == "shadeNotWire")	modelEditor -edit -wos 0 $panel;return 1;}