global proc string[] getUVShells(string $objects[]){//$objects = `ls -sl -fl`;$sel = `ls -sl`;$uvs = conv($objects, "u");$uvsNotChecked = $uvs;string $shells[] = {};for (;;)	{	select $uvsNotChecked[0];	polySelectBorderShell 0;	$shells[`size $shells`] = stringArrayToString(`ls -sl -fl`, " ");	$uvsNotChecked = stringArrayRemove(`ls -sl -fl`, $uvsNotChecked);	if (`size $uvsNotChecked` == 0)		break;	}select $sel;return $shells;}