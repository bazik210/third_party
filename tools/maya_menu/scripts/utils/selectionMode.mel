global proc selectionMode(string $item, string $mask){/*masks realpvpepfepfpuvpvfmasks simplevefuvf*/if ($mask == "v")	$mask = "pv";if ($mask == "e")	$mask = "pe";if ($mask == "f")	$mask = "pf";if ($mask == "u")	$mask = "puv";if ($mask == "vf")	$mask = "pvf";string $selectCmd;if (`selectMode -q -object`)	{	hilite $item;	selectType -ocm -alc false;	$selectCmd = "selectType -ocm -" + $mask + " true;";	}else	{	selectType -ocm -alc false;	$selectCmd = "selectType -" + $mask + " true;";	if (!`selectMode -q -preset`)		$selectCmd = $selectCmd + "hilite " + $item + ";";	}eval $selectCmd;}