global proc progressBegin(string $name){progressWindow -isInterruptable 1 -t $name -status "" -progress 0 -maxValue 1000;}global proc progressValue(float $value){int $intValue = $value * 10;progressWindow -edit -progress $intValue;}global proc progressText(string $text){progressWindow -edit -status $text;}global proc progressEnd(){progressWindow -edit -endProgress;}global proc int progressEsc(){if(`progressWindow -query -isCancelled`)	{	progressEnd;	return 1;	}return 0;}/*progressBegin progressic;progressValue 50.0;progressText "text";progressEsc;progressEnd;*/