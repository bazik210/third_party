global proc int uvsAlign(int $simple){if (whatIsSel() != "u")	return 0;string $targetUv[] = `ls -sl -fl`;goToLastSelection;string $centerUv[] = `ls -sl -fl`;if (!$simple)	goToLastSelection;string $moveUvs[] = `ls -sl -fl`;$pos1 = pointPositionUV($targetUv[0]);$pos2 = pointPositionUV($centerUv[0]);float $offset[] = {};$offset[0] = $pos1[0] - $pos2[0];$offset[1] = $pos1[1] - $pos2[1];select $moveUvs;polySelectBorderShell 0;polyEditUV -u $offset[0] -v $offset[1];return 1;}