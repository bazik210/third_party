global proc float[] nearestUv (float $pos[], string $object){//string $object = $original;//float $pos[] = `xform -q -ws -t locator1`;$nearNode = ("nearestPointOnMesh_" + $object);setAttr ($nearNode + ".inPosition") $pos[0] $pos[1] $pos[2];float $u = `getAttr ($nearNode + ".parameterU")`;float $v = `getAttr ($nearNode + ".parameterV")`;float $uv[];$uv = {$u, $v};return $uv;}