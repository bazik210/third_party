global proc distanceMeasure(){if (whatIsSel() == "e")        {        string $edges[] = sel();        string $edge;        float $distance = 0;        for ($edge in $edges)                {        //$edge = $edges[0];                string $verts[] = conv({$edge}, "v");                $distance += twoVerticesDistance($verts[0], $verts[1]);                }        print (`size $edges` + " edges has " + $distance + " distance.");        }else if (whatIsSel() == "v")        print (twoVerticesDistance(sel1(), sel2()));}