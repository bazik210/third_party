global proc tool(string $tool){//PARAMETRSint $smoothSplitTool = no;//smooth or not created edges by splitPolygonTool////////////////////////////////////////////////COMPLETING TOOLS///////////////////////////////////////////////////////string $toolEnd = `currentCtx`;//		polyCreateFacetContextif ($toolEnd == "polyCreateFacetContext")	{	ctxCompletion;	CenterPivot;	isolateAction 2;	}//		polyAppendFacetContextelse if ($toolEnd == "polyAppendFacetContext")	{	ctxCompletion;	PolySelectConvert 1;	$object = `ls -sl -o`;	select ($object[0] + ".f[" + (sizeSel() - 1) + "]");	isolateAction 2;	select `ls -sl -o`;	}//		polySplitContextelse if ($toolEnd == "polySplitContext")	{	ctxCompletion;	if ($smoothSplitTool)		{		$shape = `ls -sl`;		$edgesNotSoft = `sets -q tmpSetSoftPolygonTool`;		$edgesNotSoft = `ls -fl $edgesNotSoft`;		$edgesSoft = stringArrayRemove($edgesNotSoft, convertPoly(`ls -sl`,"te"));		polySoftEdge -a 180 $edgesSoft;		select $shape;		}	}//		polyCutContextelse if ($toolEnd == "polyCutContext")	{	setToolTo selectSuperContext;	}//		other toolelse	ctxCompletion;//////////////////////////////////////////////////BEGIN TOOLS////////////////////////////////////////////////////////////		polyAppendFacetContextif ($tool == "polyAppendFacetContext")	{	ctxCompletion;	PolySelectConvert 1;	global int $gCountFaces;	$gCountFaces = sizeSel();	select `ls -sl -o`;	setToolTo polyAppendFacetContext;	polyAppendFacetCtx -e -pc `optionVar -q polyKeepFacetsPlanar` polyAppendFacetContext;	}//		polySplitContextelse if ($tool == "polySplitContext")	{	if ((size (`ls -hl`)) > 0)		select `ls -hl`;	if (sizeSel() == 0)		print "selectSomething";	else		{		$sel = `ls -sl -o`;		if ($smoothSplitTool)			{			if (`objExists tmpSetSoftPolygonTool`)				delete tmpSetSoftPolygonTool;			sets -name tmpSetSoftPolygonTool (convertPoly($sel, "te"));			}		setToolTo polySplitContext;		}	}//		polyCutContextelse if ($tool == "polyCutContext")	{	ctxCompletion;	if (sizeSel() == 0)		{		if (`objExists tmpSetForPolyCut`)			{			select tmpSetForPolyCut;			}		}	if (whatIsSel() == "f")		{		if (`objExists tmpSetForPolyCut`)			delete tmpSetForPolyCut;		sets -name tmpSetForPolyCut;		}	setToolTo polyCutContext;	}//		other toolelse if ($tool != "")	setToolTo $tool;}