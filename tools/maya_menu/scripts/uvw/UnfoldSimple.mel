global proc UnfoldSimple(){int $pin = 0;if (`size (selMask("u"))` == sizeSel() && keysPressed() == "")	$pin = 1;string $planar[] = stringArrayCatenate(conv(selMask ("poly"), "f"), selMask("f"));string $cut[] = selMask("e");if (`size $cut` > 0 && `size $planar` == 0)	$planar = conv(`ls -l -o $cut`, "f");string $uvs[] = selMask("u");if (`size $planar` > 0)	{	select $planar;	polyProjection -ch 1 -type Planar -ibd off -icx 0.5 -icy 0.5 -ra 0 -isu 1 -isv 1 -kir -md c;	}if (`size $cut` > 0)	{	select $cut;	polyMapCut;	}if (`size $planar` > 0)	{	select $planar;	ConvertSelectionToUVs();	unfold -i 5000 -ss 0.001 -gb 0 -gmb 0.5 -pub 0 -ps 0 -us off;	}else if (`size $uvs` > 0)	{	select $uvs;	if ($pin)		{		polySelectBorderShell 0;		select -d $uvs;		}	unfold -i 5000 -ss 0.001 -gb 0 -gmb 0.5 -pub 0 -ps 0 -us off;	if ($pin)		select $uvs;	}TextureViewWindow;setToolTo moveSuperContext;}