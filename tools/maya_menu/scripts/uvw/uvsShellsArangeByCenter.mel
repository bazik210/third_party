//==============================================================================//Name://  uvsShellsArangeByCenter.mel//==============================================================================//Purpose://uvsShellsArangeByCenter; 					//uvs Shells Arange By Center.//==============================================================================//Usage://  1. Save the uvsShellsArangeByCenter.mel to your scripts directory.//  2. Start Maya. In the command line type uvsShellsArangeByCenter();//  3. Middlemouse drag to a shelf you like.//==============================================================================global proc uvsShellsArangeByCenter(float $rand){$sel = sel();$uvs = conv($sel, "u");string $uv;float $us[] = {};float $vs[] = {};for ($uv in $uvs)        {//$uv = $uvs[0];        $pos = pointPositionUV($uv);        $us[`size $us`] = $pos[0];        $vs[`size $vs`] = $pos[1];        }$maxAllU = maxOf($us);$maxAllV = maxOf($vs);string $uvsRem[] = $uvs;for (;;)        {        if (`size $uvsRem` > 0)                {                select $uvsRem[0];                polySelectBorderShell 0;                $currUvs = `ls -sl -fl`;                float $us[] = {};                float $vs[] = {};                for ($uv2 in $currUvs)                        {                //$uv2 = $currUvs[0];                        $pos = pointPositionUV($uv2);                        $us[`size $us`] = $pos[0];                        $vs[`size $vs`] = $pos[1];                        }                $maxU = maxOf($us);                $maxV = maxOf($vs);                float $move[] = {};                $move[0] = $maxAllU - $maxU;                $move[1] = $maxAllV - $maxV;                if ($rand > 0)                        {                        $move[0] = rand ($move[0], ($move[0] + $rand));                        $move[1] = rand ($move[1], ($move[1] + $rand));                        }                polyEditUV -u $move[0] -v $move[1];                $uvsRem = stringArrayRemove(`ls -sl -fl`, $uvsRem);                }        else                break;        }select $uvs;polySelectBorderShell 0;}