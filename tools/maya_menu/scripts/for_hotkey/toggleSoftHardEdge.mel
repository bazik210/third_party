//==============================================================================//Name://  toggleSoftHardEdge.mel//==============================================================================//Purpose://if keysPressed == "" 					 	// - Display Soft\Hard Edges//if keysPressed == "Ctrl" 		 		// - Display Hard Edges only//==============================================================================//Usage://  1. Save the toggleSoftHardEdge.mel to your scripts directory.//  2. Start Maya. In the command line type toggleSoftHardEdge();//  3. Middlemouse drag to a shelf you like.//==============================================================================global proc toggleSoftHardEdge(){if (keysPressed() == "Ctrl")	select(hardEdges(sel()));else{source dagMenuProc.mel;string $object = selObj();if (`getAttr ($object + ".displayEdges")` == "2"){	setAttr ($object + ".displayEdges") 1;	print "Display Soft\Hard Edges";}else{	setAttr ($object + ".displayEdges") 2;	print "Display Hard Edges only";}}}////////////////////////////////////////////////////////////////////////////////global proc string[] hardEdges(string $edges[]){//$edges = sel();$edges = conv($edges, "e");string $hardOrNot[] = `polyInfo -ev $edges`;string $hardEdges[] = {};int $count = 0;for ($info in $hardOrNot)	{//$info = $hardOrNot[0];	$sizeHard = `size $info`;	if (`substring $info ($sizeHard - 4) ($sizeHard - 1)` == "Hard")		{		if (`size (conv({$edges[$count]}, "f"))` >= 2)			$hardEdges[`size $hardEdges`] = $edges[$count];		}	$count++;	}//select $hardEdgesreturn $hardEdges;}////////////////////////////////////////////////////////////////////////////////global proc string selObj(){string $objs[] = `ls -sl -o`;return $objs[0];}////////////////////////////////////////////////////////////////////////////////