#include "common.h"
#include "gbuffer.h"
#include "dof_functions.h"
#include "gamma_correction.h"

Texture2D t_frame_color1;

float4 main( v2p_TL vin) : SV_TARGET
{
	float count_result = 0.0f;
	
	UNROLL for(int y=-1; y<1; y++)
    UNROLL for(int x=-1; x<1; x++)
    {	
		count_result += t_frame_color1.Sample(s_position, vin.Tex0, int2(x,y)).r;
	}
	return float4(count_result, 0.0f, 0.0f, 1.0f);
}


