#include "common.h"
#include "gbuffer.h"
#include "dof_functions.h"
#include "gamma_correction.h"

Texture2D t_frame_luminance;

struct vertex_output_struct
{
	float4 position	: SV_POSITION;
	float2 uv		: TEXCOORD0;
};

float4 main(vertex_output_struct input) : SV_TARGET
{
	return t_frame_luminance.Sample(s_position, input.uv).r;
}